<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_rectangle_solid_white_corners_20dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingTop="30dp"
    android:paddingRight="20dp"
    android:paddingBottom="30dp">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:includeFontPadding="false"
        android:textColor="#1a1a1a"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="温馨提示" />


    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="10dp"
        android:includeFontPadding="false"
        android:textColor="#808080"
        android:textSize="15sp"
        android:lineSpacingMultiplier="1.2"
        tools:text="实现您图片或视频的取用与上传，用于在线问诊，头像上传等服务" />


    <TextView
        android:id="@+id/btn_has_known"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@id/content"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_rectangle_solid_8d76ff_corners_21dp"
        android:gravity="center"
        android:text="我知道了"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:textStyle="bold" />

</RelativeLayout>
