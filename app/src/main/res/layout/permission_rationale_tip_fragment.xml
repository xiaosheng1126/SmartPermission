<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_rectangle_solid_white_corners_20dp"
    android:paddingLeft="20dp"
    android:paddingTop="30dp"
    android:paddingRight="20dp"
    android:paddingBottom="30dp">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:includeFontPadding="false"
        android:textColor="#1a1a1a"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="权限请求提示" />


    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="10dp"
        android:includeFontPadding="false"
        android:textColor="#808080"
        android:textSize="15sp"
        android:lineSpacingMultiplier="1.2"
        tools:text="---获取存储权限实现您图片或视频的取用与上传，用于在线问诊，头像上传等服务。 操作路径：设置-应用-丁香医生-权限" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginEnd="12dp"
            android:layout_weight="1"
            android:background="@drawable/shape_rectangle_solid_eaeaff_corners_21dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="取消"
            android:textColor="#8d76ff"
            android:textStyle="bold"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/btn_has_known"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:background="@drawable/shape_rectangle_solid_8d76ff_corners_21dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="去设置"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>
